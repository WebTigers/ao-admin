<div class="row">
    <div class="col-10 offset-1">

        <form id="AOFormSizeCard" name="AOFormSizeCard" class="auto-populate" data-service="AOServiceSizeCard">

            <h3>Size Card / Measurements</h3>

            <div class="form-messages"></div>

            <div class="row">
                <div class="col-6">

                    <div class="form-group">
                        <label for="height">Height</label>
                        <input type="text" id="height" name="height" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="weight">Weight</label>
                        <input type="text" id="weight" name="weight" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="eyes">Eye Color</label>
                        <input type="text" id="eyes" name="eyes" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="hair">Hair Color</label>
                        <input type="text" id="hair" name="hair" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="hair_length">Hair Length</label>
                        <input type="text" id="hair_length" name="hair_length" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="body_type">Body Type</label>
                        <input type="text" id="body_type" name="body_type" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="waist">Waist Size</label>
                        <input type="text" id="waist" name="waist" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="inseam">Inseam Length</label>
                        <input type="text" id="inseam" name="inseam" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                </div>

                <div class="col-6">

                    <div class="form-group">
                        <label for="shirt">Shirt Size</label>
                        <input type="text" id="shirt" name="shirt" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="sleeve">Sleeve Length</label>
                        <input type="text" id="sleeve" name="sleeve" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="neck">Neck Size</label>
                        <input type="text" id="neck" name="neck" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="jacket">Jacket Size</label>
                        <input type="text" id="jacket" name="jacket" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="shoes">Shoe Size</label>
                        <input type="text" id="shoes" name="shoes" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="gloves">Gloves</label>
                        <input type="text" id="gloves" name="gloves" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                    <div class="form-group">
                        <label for="hat">Hat Size</label>
                        <input type="text" id="hat" name="hat" class="form-control form-control-lg">
                        <div class="message-container"></div>
                    </div>

                </div>

            </div>

            <div class="form-group">
                <label for="wardrobe_notes">Wardrobe Notes</label>
                <textarea id="wardrobe_notes" name="wardrobe_notes" class="form-control form-control-lg" rows="4" style="width: 100%;"></textarea>
                <div class="message-container"></div>
            </div>

            <div class="form-group">
                <button type="button" id="size-card-save" class="btn btn-md theme-background"><i class="icon-save"></i>&nbsp; Save</button>
            </div>

        </form>

    </div>
</div>